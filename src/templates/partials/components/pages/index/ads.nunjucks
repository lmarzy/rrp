<div class="c-section">

  <ul class="o-container c-ads">

    {% for item in ads %}
    <li class="c-ads__item">
      <section class="c-ad c-ad--{{ item.class }}">
        <h2 class="c-ad__title">{{ item.title }}</h2>
        <p class="c-ad__info">{{ item.info }}</p>
        <a href="{{ item.linkUrl }}" class="c-ad__link c-btn c-btn--a">
          <span>{{ item.linkText }}</span>
          </a>
      </section>
    </li>
    {% endfor %}

  </ul>

</div>
