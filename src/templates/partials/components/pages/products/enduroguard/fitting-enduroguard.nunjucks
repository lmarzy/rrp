<h3 class="u-mb1">Fitting the EnduroGuard</h3>

{% if fitting.front %}
  <h4>Front mudguard</h4>
  <ol>
  {% for step in fitting.front %}
    <li>{{ step.step }}</li>
  {% endfor %}
  </ol>
{% endif %}

{% if fitting.rear %}
  <h4>Rear mudguard</h4>
  <ol>
  {% for step in fitting.rear %}
    <li>{{ step.step }}</li>
  {% endfor %}
  </ol>
{% endif %}
