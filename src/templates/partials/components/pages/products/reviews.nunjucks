{% if reviews %}
{% for item in reviews %}
  <blockquote>
    <p>{{ item.quote }}</p>
    <footer class="u-mb05">
      <cite>{{ item.cite }}</cite>
    </footer>
    {% if item.link %}
      {% import "product-video.nunjucks" as vid %}
      {{ vid.productVideo(item.link.url, item.link.name, item.link.img, item.link.name) }}
    {% endif %}
  </blockquote>
{% endfor %}
{% endif %}
